{
  "compilerOptions": {
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "lib": ["es2017", "dom"],
    "noEmitHelpers": true,
    "importHelpers": true,
    "module": "commonjs",
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": ["./../node_modules/@types/"],
    "baseUrl": "./"
  },
  "exclude": ["node_modules"],
  "include": ["../demo", "../src"],
  "compileOnSave": false,
  "buildOnSave": false
}
